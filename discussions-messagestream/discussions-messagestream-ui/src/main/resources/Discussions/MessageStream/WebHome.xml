  <content>{{velocity}}
#if ('POST' == $request.method)
#set ($to = $request.to)
#if ($to == 'public')
  #set($discussionContexts = [$services.discussions.getOrCreateDiscussionContext('', '', 'messagestream-public', '*')])
#elseif ($to == 'followers')
  #set($discussionContexts = [$services.discussions.getOrCreateDiscussionContext('', '', 'messagestream-followers', '*')])
#elseif ($to == 'users')
  #set($discussionContexts = [])
  #foreach ($user in $request.getParameterValues('new-discussion-users'))
    #if ($user != '')
      #set ($discard = $discussionContexts.add($services.discussions.getOrCreateDiscussionContext('', '', 'messagestream-user', $user)))
    #end
  #end
#else 
  #set($discussionContexts = [])
  #foreach ($group in $request.getParameterValues('new-discussion-groups'))
    #if ($group != '')
      #set ($discard = $discussionContexts.add($services.discussions.getOrCreateDiscussionContext('', '', 'messagestream-group', $group)))
    #end
  #end
#end
#set ($discussion = $services.discussions.createDiscussion($request.title, $request.description))
#foreach($discussionContext in $discussionContexts)
#set ($discard = $services.discussions.linkDiscussionToDiscussionContext($discussion, $discussionContext))
#end
#set ($discard = $services.discussions.createMessage($request.content, 'xwiki/2.1', $discussion))
$response.sendRedirect($xwiki.getURL('Discussions.MessageStream.Discussion', 'view', "reference=$discussion.reference"))
#else
= Create a Discussion =
#set ($docDiscussionClass = $xwiki.getDocument('Discussions.Code.DiscussionClass'))
#set ($docMessageClass = $xwiki.getDocument('Discussions.Code.MessageClass'))
#set ($discussionClass = $docDiscussionClass.getxWikiClass())
#set ($messageClass = $docMessageClass.getxWikiClass())
#set ($discussionObj = $doc.newObject('Discussions.Code.DiscussionClass'))
#set ($messageObj = $doc.newObject('Discussions.Code.MessageClass'))
#set ($titleField = $discussionClass.get('title'))
#set ($descriptionField = $discussionClass.get('description'))
#set ($contentField = $messageClass.get('content'))
{{html}}
&lt;form class="xform" action="." method="POST"&gt;
  &lt;dl&gt;
    &lt;dt&gt;
      &lt;label for="title"&gt;Title&lt;/label&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      $doc.displayEdit($titleField, '', $discussionObj)
    &lt;/dd&gt;
  &lt;/dl&gt;
  &lt;dl&gt;
    &lt;dt&gt;
      &lt;label for="description"&gt;Description&lt;/label&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      $doc.displayEdit($descriptionField, '', $discussionObj)
    &lt;/dd&gt;
  &lt;/dl&gt;
  &lt;dl&gt;
    &lt;dt&gt;
      &lt;label for="content"&gt;First message&lt;/label&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      $doc.displayEdit($contentField, '', $messageObj)
    &lt;/dd&gt;
  &lt;/dl&gt;
  &lt;dl&gt;
    &lt;dt&gt;
      &lt;label for="new-discussion-to"&gt;Recipient&lt;/label&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
       &lt;select id="new-discussion-to" name="to"&gt;
         &lt;option value="public"&gt;Everybody&lt;/option&gt;
         &lt;option value="followers"&gt;Followers&lt;/option&gt;
         &lt;option value="users"&gt;Users&lt;/option&gt;
         &lt;option value="groups"&gt;Groups&lt;/option&gt;
       &lt;/select&gt;
    &lt;/dd&gt;
  &lt;/dl&gt;

  &lt;dl class="hidden" id="new-discussion-users-field"&gt;
    &lt;dt&gt;
      &lt;label for="new-discussion-users"&gt;Users&lt;/label&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
       #set ($suggestPickerParams = {'name': 'new-discussion-users', 'multiple': 'multiple'})
       #userPicker(false, $suggestPickerParams)
    &lt;/dd&gt;
  &lt;/dl&gt;

  &lt;dl class="hidden" id="new-discussion-groups-field"&gt;
    &lt;dt&gt;
      &lt;label for="new-discussion-groups"&gt;Groups&lt;/label&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
       #set ($suggestPickerParams = {'name': 'new-discussion-groups', 'multiple': 'multiple'})
       #groupPicker(false, $suggestPickerParams)
    &lt;/dd&gt;
  &lt;/dl&gt;
  &lt;p&gt;
    &lt;span class="buttonwrapper"&gt;
      &lt;input class="button" type="submit" value="Create the discussion"/&gt;
    &lt;/span&gt;
  &lt;/p&gt;
&lt;/form&gt;
{{/html}}
#set ($discard = $xwiki.jsx.use('Discussions.MessageStream.WebHome'))
#end
{{/velocity}}</content>
